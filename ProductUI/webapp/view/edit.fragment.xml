<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	>
	<Dialog title="Edit Product">
	  <content>
	   <f:SimpleForm id="SimpleFormDisplay354"
			minWidth="1024"
			maxContainerCols="2"
			editable="false"
			layout="ResponsiveGridLayout"
			labelSpanL="3"
			labelSpanM="3"
			emptySpanL="4"
			emptySpanM="4"
			columnsL="1"
			columnsM="1">
			<f:content>
				 <Label text="Product ID" />
				  <Input value="{dataModel>/ProductId}" editable="false" />
				  <Label text="Name" />
				  <Input value="{dataModel>/Name}" />
				  <Label text="Price" />
				  <Input value="{dataModel>/Price}" />
				  <Label text="Currency Code" />
				  <Input value="{dataModel>/Currency}" editable="false"/>
				  
				  <Label text="Category" />
				  <Input value="{dataModel>/Category}"/>
				  
				  <Label text="MainCategory" />
				  <Input value="{dataModel>/MainCategory}"/>
				  
				   <Label text="SupplierName" />
				  <Input value="{dataModel>/SupplierName}"/>
				  
				   <Label text="Weight" />
				  <Input value="{dataModel>/Weight}"/>
				  
				   <Label text="Weight Unit" />
				  <Input value="{dataModel>/WeightUnit}" editable="false"/>
				  
				   <Label text="Dimension Width" />
				  <Input value="{dataModel>/DimensionWidth}"/>
				  
				   <Label text="Dimension Depth" />
				  <Input value="{dataModel>/DimensionDepth}"/>
				  
				   <Label text="Dimension Height" />
				  <Input value="{dataModel>/DimensionHeight}"/>
				  
				   <Label text="Dimension Unit" />
				  <Input value="{dataModel>/DimensionUnit}" editable="false"/>
	
	              <Label text="Description" />
				  <Input value="{dataModel>/Description}"/>
				  
				  
				
			</f:content>
		</f:SimpleForm>
	  </content>
	  <buttons>
    <Button text="Update" press="onEditData" type="Accept"/>
    <Button text="Cancel" press="cancel" type="Reject"/>
</buttons>
	</Dialog>
</core:FragmentDefinition>